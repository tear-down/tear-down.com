<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <title>{{ title }}</title>
  <link rel="shortcut icon" href="/img/favicon.ico" sizes="16x16 32x32 48x48" type="image/x-icon" />
  <link rel="icon" href="/img/favicon-256.png" sizes="256x256" type="image/png" />
  <link rel="icon" href="/img/favicon-512.png" sizes="512x512" type="image/png" />
  <link rel="fluid-icon" href="/img/favicon-512.png" title="tear&bull;down">
  <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/img/favicon-152.png" />
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/img/favicon-144.png" />
  <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/img/favicon-120.png" />
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/img/img/favicon-114.png" />
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/img/favicon-72.png" />
  <link rel="apple-touch-icon-precomposed" href="/img/favicon-57.png" />
  {% if description %}
  <meta name="description" content="{{ description }}" />
  <meta property="og:description" content="{{ description }}" />
  {% endif %}
  {% if ogimage %}<meta property="og:image" content="/img/{{ ogimage }}" />{% endif %}
  <meta property="og:title" content="{{ title }}" />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="tear&bull;down" />
  <script src="/js/jquery-3.3.1.slim.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/main.css" />
  <script src="/js/bootstrap.min.js"></script>
  <script type="text/javascript">
    function duckSearch() {
        var searchField = document.getElementById("searchField");
        if (searchField && searchField.value) {
            var query = escape(searchField.value + " site:tear-down.com");
            window.location.href = "https://duckduckgo.com/?q=" + query;
        }
    }
  </script>
</head>

<body leftmargin="0" topmargin="0" marginheight="0" marginwidth="0" bgcolor="#FFFFFFFF">
<div class="container">
  <header class="header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <a class="btn btn-outline-success" href="/donate/">Donate</a>
      </div>
      <div class="col-4 text-center"><a class="navbar-brand" href="/"><img src="/img/tear-down-logo-curves.svg" height="30" alt="tear-down" /></a></div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <form class="form-inline my-2 my-lg-0" onsubmit="duckSearch()" action="javascript:void(0)">
          <input class="form-control mr-sm-2" type="search" id="searchField" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </div>
  </header>

  <div class="content">{% block content %}{% endblock %}</div>
</div>
</body></html>
